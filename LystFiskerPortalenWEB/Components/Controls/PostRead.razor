@inject IPostRepo PostRepo

@if (posts == null)
{
    <p>Loading posts....</p>
}
else if (posts.Count == 0)
{
    <p>Der er ingen posts at vise.</p>
}
else
{
    @foreach (var post in posts)
    {
        <div class="card mb-4 shadow-sm" style="max-width: 36rem;">
            @if (!post.IsEditing)
            {
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <span class="text-muted">BRUGER</span>
                        <small class="text-muted">@post.CreationDate.ToString("dd-MM-yyyy HH:mm")</small>
                    </div>

                    <h5 class="card-title mt-2">@post.Title</h5>
                    <p class="card-text mb-1">@post.Description</p>
                    <p class="card-text text-muted mb-2">
                        <i class="bi bi-geo-alt"></i> @post.Location
                    </p>

                    @if (!string.IsNullOrWhiteSpace(post.Picture))
                    {
                        <img src="@post.Picture"
                             class="card-img-top rounded mb-3"
                             alt="Billede ikke fundet"
                             style="max-height: 250px; object-fit: cover;" />
                    }

                    <div class="d-flex justify-content-between align-items-center mt-2">
                        <div>
                            <span class="badge bg-primary me-2">Teknik</span>
                            <span class="badge bg-info text-dark">Blink</span>
                        </div>

                        <button class="btn btn-outline-warning btn-sm"
                                @onclick="@(() => StartEdit(post))">
                            <i class="bi bi-pencil-square"></i> Edit
                        </button>
                    </div>
                </div>
            }
            else
            {
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <span class="text-muted">Rediger post</span>
                        <small class="text-muted">@post.CreationDate.ToString("dd-MM-yyyy HH:mm")</small>
                    </div>

                    <div class="mb-3 mt-2">
                        <label class="form-label">Titel</label>
                        <InputText class="form-control" @bind-Value="post.Title" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Beskrivelse</label>
                        <InputTextArea class="form-control" @bind-Value="post.Description" rows="3" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Lokation</label>
                        <InputText class="form-control" @bind-Value="post.Location" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Billede-URL</label>
                        <InputText class="form-control" @bind-Value="post.Picture" />
                        @if (!string.IsNullOrWhiteSpace(post.Picture))
                        {
                            <img src="@post.Picture"
                                 class="img-fluid rounded mt-2"
                                 alt="Billede ikke fundet"
                                 style="max-height: 200px; object-fit: cover;" />
                        }
                    </div>

                    <div class="d-flex justify-content-end">
                        <button class="btn btn-success btn-sm me-2"
                                @onclick="@(() => SavePost(post))">
                            <i class="bi bi-check-lg"></i> Gem
                        </button>

                        <button class="btn btn-outline-secondary btn-sm"
                                @onclick="@(() => CancelEdit(post))">
                            <i class="bi bi-x-lg"></i> Annuller
                        </button>
                    </div>
                </div>
            }

            <div class="card-footer bg-white border-0">
                <small class="text-muted">KOMMENTARER</small>
            </div>
        </div>
    }
}

@code {
    private List<Post> posts { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        posts = await PostRepo.GetAllPosts();
    }

    // Methods for editing posts
    private void StartEdit(Post post)
    {
        post.IsEditing = true;
    }

    private async Task SavePost(Post post)
    {
        await PostRepo.UpdatePost(post);
        post.IsEditing = false;
    }

    private async Task CancelEdit(Post post)
    {
        post.IsEditing = false;
    }
}
